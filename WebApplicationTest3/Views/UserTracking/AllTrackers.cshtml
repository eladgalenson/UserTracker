@model IEnumerable<UserTrackerViewModel>

@{
    ViewData["Title"] = "All Trackings";
}

<h2>All Trackings</h2>
<p>@ViewData["data"]</p>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tracker.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tracker.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackerCount)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <i class="fas fa-@item.Tracker.AvatarType"></i>&nbsp;
                    @Html.DisplayFor(modelItem => item.Tracker.UserName)
                </td>
                <td>
                    <img src="@item.Tracker.ImageUrl" alt="Alternate Text" width="20" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrackerCount)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>

@if (@ViewData["access"]!= null)
{
    <div>
        <a asp-controller="Profile" asp-action="Index">Add new Tracker</a>
    </div>

}

