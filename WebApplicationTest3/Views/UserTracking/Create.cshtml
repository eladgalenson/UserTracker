@model FriendsTracker.ViewModels.InvitationViewModel
@* Todo - How can I embedd this controoler inside another *@
@* Enter Email, choose avatar, and include some short text message *@

@section scripts
    {
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
}


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="well">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-error"></div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="text" class="form-control" />
                    <span asp-validation-for="Email" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Message">Message</label>
                    <input asp-for="Message" type="text" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Avatar">Avatar selection</label>
                    <select name="cars">
                        <option value="Cute">Cute</option>
                        <option value="Tough">Tough</option>
                        <option value="Mad">Mad</option>
                    </select>

                </div>

                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-success">Create</button>
                </div>

            </form>
        </div>
    </div>
</div>